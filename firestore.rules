rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
  	match /companies/{companyID} {
    	allow get: if true;
      allow list, write: if false;
    }
  
    match /users/{userID} {
      allow read: if request.auth.token.email == userID;
      allow write: if false;
    }
    
    match /cases/{caseID} {
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.companyID == resource.data.companyID;
    }
  }
}